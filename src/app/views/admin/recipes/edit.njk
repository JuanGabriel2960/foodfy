{% extends "admin/layouts/main.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/recipe.css"/>
    <title> Foodfy | Editando {{recipe.title}}</title>
{% endblock %}

{% block content %}
    <form id="deleteForm" class="recipes recipes--admin container" style="display: none;" action="/admin/recipes/{{recipe.id}}?_method=DELETE" method="POST"></form>
    <form id="updateForm" class="recipes recipes--admin container" action="/admin/recipes/{{recipe.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="row">
            <h1 class="title font-md">Editando receita</h1>
            <div class="actions-container">
                <input
                    class="button button--delete font-xs"
                    onclick="DeleteAlert.run(event, 'VocÃª tem certeza que deseja deletar essa receita?')"
                    type="submit"
                    form="deleteForm"
                    value="Deletar"
                />
                <input class="button font-xs" type="submit" form="updateForm" value="Salvar receita" />
            </div>
        </div>
        <section class="recipe__form container">
                {% include "includes/recipes/fields.njk" %}
        </section>
    </form>
{% endblock %}
