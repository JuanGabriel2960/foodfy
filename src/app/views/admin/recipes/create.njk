{% extends "admin/layouts/main.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/recipe.css"/>
    <title> Foodfy | Criando receita</title>
{% endblock %}

{% block content %}
    <form
        action="/admin/recipes"
        method="POST"
        enctype="multipart/form-data"
    >
        <section class="recipes recipes--admin container">
            <header class="section-header">
                <h1 class="title font-md">Criando receita</h1>
                <div class="actions-container">
                    <button class="button font-xs" type="submit">Salvar receita</button>
                </div>
            </header>
            <div class="recipe__form container">
                    {% include "includes/recipes/fields.njk" %}
            </div>
        </section>
    </form>
{% endblock %}
