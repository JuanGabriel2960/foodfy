{% extends "admin/layouts/session.njk" %}

{% block head %}
    <title>Foodfy | Iniciar Sessão</title>
{% endblock %}

{% block content %}
    <h3 class="title font-md">Iniciar Sessão</h3>
    <form
        action="/admin/login"
        method="POST"
        class="submit-form"
        data-schema="login"
    >
        {% include "includes/sessions/loginFields.njk" %}
        <div class="row">
            <a class="link" href="/admin/recover-password">Perdeu a senha?</a>
            <button type="submit" class="button">Acessar</button>
        </div>
    </form>
{% endblock %}
