            <h1 class="title font-md">Criando chef</h1>
            <div class="actions-container">
                <button class="button font-xs" type="submit">Salvar chef</button>
            </div>
        </div>
        <section class="recipe__form container">
                {% include "includes/chefs/fields.njk" %}
        </section>
    </form>
{% endblock %}
