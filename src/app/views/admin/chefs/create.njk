{% block head %}
    <link rel="stylesheet" href="/styles/recipe.css"/>
    <title> Foodfy Admin | Criando chef
    </title>
{% endblock %}

{% block content %}
    <form class="recipes recipes--admin container" action="/admin/chefs" method="POST" enctype="multipart/form-data">
